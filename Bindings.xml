<Bindings>
    <!-- Define the keybinding and associate it with a Lua function -->
    <Script file="PlayerControls.lua" />
    <Binding name="Cycle Speed" header="PLAYER_CONTROLS">
        SpeedControl_Cycle()
    </Binding>
    <Binding name="Increase Speed" header="PLAYER_CONTROLS">
        IncreaseSpeed()
    </Binding>
    <Binding name="Decrease Speed" header="PLAYER_CONTROLS">
        DecreaseSpeed()
    </Binding>
</Bindings>